{
  "name": "stewart-platform-visualizer",
  "version": "1.0.0",
  "description": "A 3D visualizer for Stewart platforms with multiple configurations and configurable geometry parameters using React Three Fiber",
  "main": "electron.js",
  "homepage": "./",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-dev": "concurrently \"BROWSER=none npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-build": "npm run build && electron-builder",
    "electron-build-mac": "npm run build && electron-builder --mac",
    "electron-build-win": "npm run build && electron-builder --win",
    "electron-build-linux": "npm run build && electron-builder --linux"
  },
  "keywords": [
    "stewart-platform",
    "stewart-platform-8-8",
    "stewart-platform-6-6",
    "stewart-platform-6-3-redundant",
    "stewart-platform-6-3-asymmetric",
    "stewart-platform-6-3",
    "stewart-platform-4-4",
    "stewart-platform-3-3",
    "threejs",
    "react-three-fiber",
    "robotics",
    "kinematics",
    "parallel-robot"
  ],
  "author": "Engineering Visualizer",
  "license": "MIT",
  "dependencies": {
    "@react-three/drei": "^9.80.0",
    "@react-three/fiber": "^8.13.5",
    "electron-is-dev": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "three": "^0.160.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.28.3",
    "@babel/core": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.2.2",
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.27",
    "react-scripts": "5.0.1",
    "tailwindcss": "^3.3.3",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.stewart-platform-visualizer",
    "productName": "Stewart Platform Visualizer",
    "files": [
      "build/**/*",
      "electron.js",
      "node_modules/**/*",
      "package.json"
    ],
    "extraMetadata": {
      "main": "electron.js"
    },
    "directories": {
      "buildResources": "public"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Development",
      "icon": "public/icon.png"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
